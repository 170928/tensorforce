{
    "type": "ppo_agent",
    "update_mode" : {
        "unit" : "episodes",
        "batch_size": 20,
        "frequency" : 20
    },
    "memory" : {
        "type": "latest",
        "include_next_states": false,
        "capacity" : 5000
    },
    "discount": 0.99,

    "entropy_regularization": 1e-2,
    "gae_lambda": 0.97,
    "likelihood_ratio_clipping": 0.2,
    "step_optimizer": {
        "type": "adam",
        "learning_rate" : 0.0025
    },
    "subsampling_fraction": 0.4,
    "optimization_steps": 25,
    "baseline_mode": "states",
    "baseline": {
      "type": "mlp",
      "sizes": [64, 64]
    },
    "baseline_optimizer": {
        "type": "multi_step",
        "optimizer": {
            "type": "adam",
            "learning_rate": 1e-4
        },
        "num_steps": 5
    },
    "summaries": {
        "labels": ["total-loss"],
            "directory": "tmp",
            "seconds": 10
    }
}
